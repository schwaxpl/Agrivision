# =============================================================================
# CONFIGURATION AGRIVISION - Variables d'environnement
# =============================================================================
# Copiez ce fichier en .env et remplissez les valeurs

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# Clé API OpenAI (REQUIS)
OPENAI_API_KEY=your_openai_api_key_here

# URLs d'API (optionnel - utilise les valeurs par défaut si non spécifiées)
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_ORGANIZATION=your_org_id

# -----------------------------------------------------------------------------
# MODÈLE CONFIGURATION
# -----------------------------------------------------------------------------
# Modèle par défaut à utiliser
DEFAULT_MODEL=gpt-4o-mini

# Température par défaut (0.0 = déterministe, 1.0 = créatif)
DEFAULT_TEMPERATURE=0.1

# Nombre maximum de tokens dans la réponse
MAX_TOKENS=4000

# -----------------------------------------------------------------------------
# RÉPERTOIRES
# -----------------------------------------------------------------------------
# Répertoire d'entrée par défaut
INPUT_DIR=input

# Répertoire de sortie par défaut
OUTPUT_DIR=output

# Répertoire des logs
LOG_DIR=logs

# -----------------------------------------------------------------------------
# TRAITEMENT
# -----------------------------------------------------------------------------
# Nombre maximum de tentatives en cas d'échec
MAX_RETRIES=3

# Délai d'attente pour les requêtes API (en secondes)
TIMEOUT_SECONDS=120

# Taille des lots pour le traitement par batch
BATCH_SIZE=10

# Pattern par défaut pour les fichiers markdown
MARKDOWN_PATTERN=*.md

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Format des logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# -----------------------------------------------------------------------------
# DÉVELOPPEMENT
# -----------------------------------------------------------------------------
# Mode debug (true/false)
DEBUG_MODE=false

# Affichage des prompts envoyés au modèle (true/false)
SHOW_PROMPTS=false

# Sauvegarde des réponses brutes du modèle (true/false)
SAVE_RAW_RESPONSES=false

# -----------------------------------------------------------------------------
# RÉSEAU ET SSL (pour ZScaler ou autres proxies d'entreprise)
# -----------------------------------------------------------------------------
# Vérification SSL (true/false) - mettre false pour ZScaler
VERIFY_SSL=false

# Chemin vers un certificat SSL personnalisé (optionnel)
SSL_CERT_PATH=

# Désactiver les warnings SSL (true/false)
DISABLE_SSL_WARNINGS=true